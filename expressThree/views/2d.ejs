<!-- Canvas Element for p5-->
<div class="toolbar" id="toolbar">
    <div class="btn toolbar-btn" id="create-shape-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Create Shape">
        <i class="fa-solid fa-plus fa-2xl" id="create-shape-icon"></i>
    </div>
    <div class="btn toolbar-btn" id="select-shape-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Select Shape">
        <i class="fa-solid fa-hand-pointer fa-xl" id="select-shape-icon"></i>
    </div>
    <div class="btn toolbar-btn dropdown" id="load-shape-btn"
        data-bs-toggle="tooltip"
        data-bs-placement="right"
        data-bs-title="Load Shapes">
        <i class="fa-solid fa-list fa-xl" id="load-icon" data-bs-toggle="dropdown" aria-expanded="false"></i>
        <ul id="shapesDropdown" class="dropdown-menu dropdown-menu-end">
            <% for( let i = 0; i < savedShapes.length; i++ ) { %>
                <li><a class="dropdown-item"><%= savedShapes[i].name %></a></li>
            <% } %>
        </ul>
    </div>
    <div class="btn toolbar-btn disabled" id="save-shape-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Save Shape">
        <i class="fa-solid fa-floppy-disk fa-xl disabled"
           id="save-icon"
           data-bs-toggle="offcanvas"
           data-bs-placement="right"
           data-bs-title="Save Shape"
           data-bs-target="#offcanvasRight"
           aria-controls="offcanvasRight"></i>
    </div>
    <div class="btn toolbar-btn disabled" id="intersection-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Intersection">
        <i class="fa-solid fa-cube fa-xl" id="intersection-icon"></i>
    </div>
    <div class="btn toolbar-btn" id="monte-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Monte Carlo">
        <i class="fa-solid fa-braille fa-lg" id="monte-icon"></i>
    </div>
    <div class="btn toolbar-btn" id="undo-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Undo">
        <i class="fa-solid fa-rotate-left fa-xl" id="undo-icon"></i>
    </div>
    <div class="btn toolbar-btn" id="redo-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Redo">
        <i class="fa-solid fa-rotate-right fa-xl" id="redo-icon"></i>
    </div>
    <div class="btn toolbar-btn" id="clear-btn"
         data-bs-toggle="tooltip"
         data-bs-placement="right"
         data-bs-title="Clear Canvas">
        <i class="fa-solid fa-trash fa-lg" id="clear-icon"></i>
    </div>
</div>
<div id="canvas-container">
</div>

<div class="offcanvas offcanvas-end custom" data-bs-backdrop="false" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        <h4>Save Shape</h4>
        <button type="button" class="btn" id="close-save-btn" data-bs-dismiss="offcanvas">
            <i class="fa-solid fa-xmark fa-xl" style="color: lightcoral"></i>
        </button>
    </div>
    <div class="offcanvas-body">
      ...
    </div>
</div>

<!-- p5.js and sketch file -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
<script type="module" src="dist/sketch.js"></script>
