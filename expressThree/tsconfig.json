{
    "compilerOptions": {
      "module": "Node16",
      "target": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "moduleResolution": "Node16",
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "skipLibCheck": true // Optional: Skips type checking of declaration files
    },
    "include": ["src/**/*"]
  }